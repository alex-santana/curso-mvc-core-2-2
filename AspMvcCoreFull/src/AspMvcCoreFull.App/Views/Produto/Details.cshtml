@model AspMvcCoreFull.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <img src="~/imagens/@Model.Imagem" width="300" height="300" />
        </div>
        <div class="col-sm-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Imagem)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Imagem)
                </dd>
                <dt class="col-sm-2">
                    @Model.Valor.ToString("C")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Valor)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ativo)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" class="btn btn-dark" asp-route-id="@Model.Id">Editar</a>
                <a asp-action="Index " class="btn btn-info">Voltar</a>
            </div>
        </div>
        
    </div>
</div>
